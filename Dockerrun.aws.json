{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name":"client",
            "image" : "erickc80/multi-client",
            "hostname": "client",
            "essential" : false,
            "memory" : 128
            
        },
        {
            
            "name":"server",
            "image" : "erickc80/multi-server",
            "hostname": "api",
            "essential" : false ,
            "memory" : 128
        },
        {
            "name":"worker",
            "image" : "erickc80/multi-worker",
            "hostname": "worker",
            "essential" : false ,
            "memory" : 128
        },
        {
            "name":"nginx",
            "image" : "erickc80/multi-nginx",
            "hostname" : "nginx",
            "essential" : true,
            "portMappings" :[
               {
                   "hostPort": 80,
                   "containerPort" : 80
               } 
            ],
            "links" :[
               "client", "servers" 
            ],
            "memory" : 128   
        }    
    ]
}